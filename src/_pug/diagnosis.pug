extends include/_layout
block vars
  include include/_meta
  - var key = "diagnosis"
  - var page = pages[key]
block css
  link(rel="stylesheet", href='./css/ionicons.min.css')
  link(rel="stylesheet", href='./css/style.css')
  link(rel="stylesheet", href='./css/diagnosis.css')
block js
  script(src="./js/main.js")
block content
  include include/_header
  section.diagnosis_wrap
    #1th.diagnosis_wrap__item
      .question
        .question__query
          span.question_number Q1
          span.question_text どの国にサーバを立てますか？
        .question__choice
          label.individual_choice
            input.checkbox(type="checkbox" name="1th_check" value="1")
            span.lever_word 日本
          label.individual_choice
            input.checkbox(type="checkbox" name="1th_check" value="2")
            span.lever_word アメリカ
          label.individual_choice
            input.checkbox(type="checkbox" name="1th_check" value="3")
            span.lever_word シンガポール
    #2th.diagnosis_wrap__item
      .question
        .question__query
          span.question_number Q2
          span.question_text どのような場面で使いますか？
        .question__choice
          label.individual_choice
            input.checkbox(type="checkbox" name="2th_check" value="1")
            span.lever_word 個人
          label.individual_choice
            input.checkbox(type="checkbox" name="2th_check" value="2")
            span.lever_word 企業
    #3th.diagnosis_wrap__item
      .question
        .question__query
          span.question_number Q3
          span.question_text どのようなことに利用したいですか？
        .question__choice
          label.individual_choice
            input.checkbox(type="checkbox" name="3th_check" value="1")
            span.lever_word サーバを触ってみる程度
          label.individual_choice
            input.checkbox(type="checkbox" name="3th_check" value="2")
            span.lever_word 自分でサーバの構築をしたい！
          label.individual_choice
            input.checkbox(type="checkbox" name="3th_check" value="3")
            span.lever_word 決めていない
    #4th.diagnosis_wrap__item
      .question
        .question__query
          span.question_number Q4
          span.question_text 容量はどのくらいにしますか？
        .question__choice
          label.individual_choice
            input.checkbox(type="checkbox" name="4th_check" value="1")
            span.lever_word お手軽
          label.individual_choice
            input.checkbox(type="checkbox" name="4th_check" value="2")
            span.lever_word おすすめ
          label.individual_choice
            input.checkbox(type="checkbox" name="4th_check" value="3")
            span.lever_word 大容量
    #5th.diagnosis_wrap__item
      .question
        .question__query
          span.question_number Q5
          span.question_text データベースやメールは使いますか？
        .question__choice
          label.individual_choice
            input.checkbox(type="checkbox" name="5th_check" value="1")
            span.lever_word 使う
          label.individual_choice
            input.checkbox(type="checkbox" name="5th_check" value="2")
            span.lever_word 使わない
          label.individual_choice
            input.checkbox(type="checkbox" name="5th_check" value="3")
            span.lever_word 決めていない
    #6th.diagnosis_wrap__item
      .question
        .question__query
          span.question_number Q6
          span.question_text Webサーバは外部に公開しますか？
        .question__choice
          label.individual_choice
            input.checkbox(type="checkbox" name="6th_check" value="1")
            span.lever_word プライベートモードのみ(非公開)
          label.individual_choice
            input.checkbox(type="checkbox" name="6th_check" value="2")
            span.lever_word グローバルモードのみ(公開)
          label.individual_choice
            input.checkbox(type="checkbox" name="6th_check" value="3")
            span.lever_word プライベート・グローバルの両方
    #7th.diagnosis_wrap__item
      .question
        .question__query
          span.question_number Q7
          span.question_text 自動バックアップをConohaで行いますか？
        .question__choice
          label.individual_choice
            input.checkbox(type="checkbox" name="7th_check" value="1")
            span.lever_word 行う
          label.individual_choice
            input.checkbox(type="checkbox" name="7th_check" value="2")
            span.lever_word 行わない
    #8th.diagnosis_wrap__item
      .question
        .question__query
          span.question_number Q8
          span.question_text 使用したいサービス(wordpressなど)はありますか？
        .question__choice
          label.individual_choice
            input.checkbox(type="checkbox" name="8th_check" value="1")
            span.lever_word ある
            .overlay_border
          label.individual_choice
            input.checkbox(type="checkbox" name="8th_check" value="2")
            span.lever_word ない
            .overlay_border
    .fixed_conoha
      img.fixed_conoha__img(src="./img/index/conoha_main.png" alt="固定このは")
