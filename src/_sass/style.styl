@import "include/_import.styl";

body
  font-size 14px

/*****----------------------------------- header共有部分 *****/

header
  width:100%
  background:main_color
  padding:5px 0
  h1
    a
      display: table
      margin:0 auto
      text-align: center
      font-size:25px
      color:#000
      font-weight: bold
      line-height:1.5

/*****----------------------------------- nav共有部分 *****/
nav
  ul
    li
      margin:20px 2%
      //-nav_effect呼び出し
      nav_effect:main_color,#000
      &.active
        margin:20px 2% 20px 1%
        z-index: 50;
        transform: scale(1.3)
        //-nav_effect呼び出し
        nav_effect:nav_active,#fff


/*****-----------------------------------*****/
// 1000~768 1000px固定幅
@media screen and (max-width: 999px)
  body
    width 1000px
  .header_wrapp
    .diagnosis_start
      width 300px
      height 300px
// ここからspの場合
@media screen and (max-width: 767px)
  body
    display none
