@import "include/_import.styl";

body
  font-size 14px
  font-family "游ゴシック体", "Yu Gothic", YuGothic, "ヒラギノ角ゴ Pro", "Hiragino Kaku Gothic Pro", "メイリオ", "Meiryo", "sans-serif"

/*****----------------------------------- header共有部分 *****/

.global_header
  position fixed
  width 100%
  background-color #fff
  &__h1
    height 120px
    padding 10px 0
    box-sizing border-box
    background main_color
    &--link
      display block
      line-height 50px
      text-align center
      font-size 2.2em
      font-weight bold
      font-family "toroman"
      letter-spacing .2em
      color #fff
  &__nav
    margin 10px 0
    padding 0 3%
    .question_list
      display flex
      flex-direction row
      flex-wrap nowrap
      justify-content space-around
      align-items stretch
      height 70px
      &__item
        position relative
        flex 1
        width 100%
        height 100%
        margin 0 35px 0 0
        background-color main_color
        box-shadow: 5px 5px 5px #fff;
        transition 1s
        &:hover
          cursor pointer
        &.active
          flex 2.5
          background-color #4585e6
          box-shadow: 5px 5px 5px rgba(#999,.8);
          &::after
            border-top 35px solid #4585e6

        // 三角形
        &::before,&::after
          content ""
          position absolute
          top 0
          width 0
          height 0
          margin auto
          border 35px solid transparent
          transform rotate(-90deg)
          transition 1s
        &::before
          border-top 35px solid #fff
          cursor default
        &::after
          right -70px
          border-top 35px solid main_color
        &--link
          position relative
          display block
          line-height 70px
          text-align right
          font-size 1.4em
          font-weight bold
          color #fff
          &:hover
            opacity 1
          .image
            display none
            opacity 0
            position absolute
            top -10px
            left 15%
            width 100px
            transform rotateY(180deg)
          .image.active
            display block
            opacity 1
            animation fadeIn 1s ease



