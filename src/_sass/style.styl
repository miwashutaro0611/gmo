@import "include/_import.styl";
header
  background: url(../img/index/firstview-top.png) no-repeat right top;
  background-size 100% auto
  width:100%
  height:115vh
  min-height: 1000px;
  position: relative;
  z-index: 0;
  .inner-wrap
    overflow: hidden;
    h1
      text-align: center;
      padding:250px 0 0;
    .white-bar
      position: absolute;
      bottom:0;
      z-index: 10;
      background: #fff;
      white_bar:#fff
  .circle
    position: absolute;
    top:40%;
    left:5%;
    z-index: 100;
    a
      display: block;
      width:400px;
      height:400px;
      padding:120px 30px;
      color:#fff;
      font-size: 35px;
      font-weight: bold;
      line-height: 1.6;
      background: url(../img/index/botan.png) no-repeat center top;
      background-size: 100% auto;
      box-sizing: border-box;
#description
  margin:50px 0 0;
  h2
    padding 0 0 100px
    font-size:4.5vw;
    color:#FFA200;
    line-height: 1.6;
    letter-spacing: 0.2em;
  p
    padding 0 0 100px
    font-size:3vw;
    line-height: 1.7;
    letter-spacing: 0.2em;
#diagnosis
  background: url(../img/index/konoha.png) no-repeat 90% 75%;
  background-size: 25% auto;
  width:100%;
  height 22vw
  margin 0 auto 150px
  padding 15% 0 5%
  position: relative;
  overflow: hidden;
  .start
    max-width:1000px;
    width:90%;
    margin:0 auto;
    a
      display: block;
      width:60%;
      font-size:4vw
      color:#000;
      border:2px solid #000;
      padding:3%;
      text-align: center;
      box-sizing: border-box;
      span
        &.large
          color:#FFA200
          font-size:7vw

  .diagnosis_wrap1
    double_line:#fff,0%,#2576c2
  .diagnosis_wrap2
    double_line:#fff,65%,#2576c2
//ここからspの場合
@media screen and (max-width: 767px)
  body
    display: none;
