.back_window
  position relative
  z-index 2
  perspective 300px
  transform-style preserve-3d
  &::before,&::after
    content ''
    position absolute
    z-index -1
    display block
    overflow hidden
    transition all .5s
  &::after
    top 0
    left 0
    width 100%
    height 100%
    transform-origin center bottom
    transform rotateX(0)
    background plan_color
  &:hover::after
    transform rotateX(-180deg)
    background plan_color

