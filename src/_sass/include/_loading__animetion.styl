/*ページングアニメーション*/
#loader-bg
  // display none
  position fixed
  width 100%
  height 100%
  top 0px
  left 0px
  background-color #071063
  background-image url(../img/common/conoha.png),url(../img/common/load_back2.jpg)
  background-repeat no-repeat,no-repeat
  background-position left top,center top
  background-size 45% auto,100% auto
  z-index 9998

#loader
  // display none
  position fixed
  top 50%
  left 50%
  width 15vw
  height 15vw
  margin-top -100px
  margin-left -100px
  text-align center
  color #fff
  z-index 9999

.start_btn_active
  opacity 1 !important
  transform translateY(0) !important
  animation start_btn_active 1.5s cubic-bezier(0.075, 0.820, 0.165, 1.000)

.loading
  position relative
  width 15vw
  height 15vw
  &::after
    border-radius: 40%
    content ""
    display block
    width 100%
    height 100%
    background linear-gradient(to bottom, #ee88aa, rgba(250, 238, 255, 0.3) 90%, rgba(230, 238, 255, 0.5))
    animation color-fade 3s infinite linear
  &__circle1, &__circle2, &__circle3
    opacity .4
    position absolute
    left 0
    background #0af
    width 15vw
    height 15vw
    transform-origin 50% 47%
    border-radius 40%
    animation rotation 3s infinite linear

  &__circle2
    opacity .2
    background #ff0
    animation rotation 5s infinite linear

  &__circle3
    animation rotation 2.5s infinite linear

  &__title
    position absolute
    top 40%
    left 0
    width 100%
    z-index 1
    font-family toroman
    color #fff
    text-align center
    font-size 2vw
    line-height 2rem
    letter-spacing .15em
    animation text-fade 300ms infinite linear
    //影をつける
    contour main_color
