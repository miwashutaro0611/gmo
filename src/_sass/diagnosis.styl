  .fixed_conoha
    position fixed
    top 260px
    right 5%
    width 30%
    height auto
    &__img
      position absolute
      top 0
      right 0
      left 0
      margin auto
      width 100%
      height auto
/*****-----------------------------------*****/
// 1000~768 1000px固定幅
@media screen and (max-width: 999px)
  body
    width 1000px
    .global_header
      position absolute
      width 1000px
// ここからspの場合
@media screen and (max-width: 767px)
  body
    display none
