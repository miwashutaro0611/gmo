@import "include/_import.styl";

body
  font-size 14px

/*****-----------------------------------*****/
.diagnosis_wrap
  width 100%
  height 100%
  padding-top 210px
  &__item
    height calc(100vh - 200px)
    background-color rgba(main_color,0.5)
    .question
      width 100%
      height 100vh
      padding 5% 8%
      box-sizing border-box
      &__query
        width calc(100% - 25%)
        font-size 3vw
        background-color #fff
        middle-line(12vh)
      &__choice
        .individual_choice
          width calc(100% - 35%)
          margin-top 5vh
          font-size 3.5vw
          background-color #fff
          middle-line(10vh)
  .fixed_conoha
    position fixed
    top 260px
    right 5%
    width 30%
    height auto
    &__img
      position absolute
      top 0
      right 0
      left 0
      margin auto
      width 100%
      height auto
/*****-----------------------------------*****/
// 1000~768 1000px固定幅
@media screen and (max-width: 999px)
  body
    width 1000px
    .global_header
      position absolute
      width 1000px
// ここからspの場合
@media screen and (max-width: 767px)
  body
    display none
