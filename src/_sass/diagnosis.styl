  .fixed_conoha
    position fixed
    top 260px
    right 5%
    min-width 300px
    width 30%
    height auto
    &__img
      position absolute
      top 0
      right 0
      left 0
      margin auto
      width 100%
      height auto
  .checked_count
    position fixed
    z-index 100
    right 3vh
    bottom 3vh
    width 30vh
    min-width 320px
    min-height 320px
    border 10px solid #fff
    border-radius 50%
    text-align center
    background-color #ffbf7f
    color #fff
    animation fadeIn .2s ease
    middle-line(30vh)
    &:hover
      background-color main_color
      cursor pointer
    // 8問選択時のアニメーション
    &.animated
      animation hurueru .5s infinite ease
    .num
      position absolute
      z-index 101
      top 170px
      right 0
      bottom 0
      left -10vh
      margin auto
      font-size 140px
      font-weight bold
      &::before
        content 'あと残り'
        position absolute
        top -9vh
        right 0
        bottom 0
        left 10vh
        z-index 101
        font-size 50px
        font-weight normal
      &::after
        content '問！'
        position absolute
        z-index 101
        font-size 60px
        font-weight bold
    .result_go
      display block
      position absolute
      top 132px
      right 0
      left 0
      text-align center
      font-size 56px
      font-weight bold
/*****-----------------------------------*****/
