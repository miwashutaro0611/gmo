@import "include/_import.styl";

body
  font-size 14px
  font-family "游ゴシック体", "Yu Gothic", YuGothic, "ヒラギノ角ゴ Pro", "Hiragino Kaku Gothic Pro", "メイリオ", "Meiryo", "sans-serif"


/*****-----------------------------------*****/
.diagnosis_wrap
  min-width 1000px
  width 100%
  height 100%
  padding-top 210px
  background-image url("../img/index/back_pattern.png")
  &__item
    height calc(100vh - 200px)
    .question
      width 100%
      min-height 631px
      padding 5% 8%
      box-sizing border-box
      &__query
        width calc(100% - 25%)
        font-size 2.7vw
        background-color transparent
        middle-line(100)
        .question_number
          padding-right 20px
          box-sizing border-box
          font-size 4vw
          font-weight bold
          color main_color
          text-shadow: 3px 3px 3px #ccc;
        .question_text
          font-weight bold
          color #555
          background: linear-gradient(transparent 65%, #ffbf7f 35%)
      &__choice
        position relative
        min-height 400px
        .individual_choice
          display flex
          min-width 547px
          width calc(100% - 35%)
          margin-top 5vh
          font-size 3.5vw
          font-weight bold
          color #555
          background-color #fff
          cursor pointer
          transition .2s
          box-shadow: 3px 3px 3px #ccc;
          middle-line(109)
          &:hover
            box-shadow: 6px 6px 3px #aaa;
          .checkbox
            display none
            &:checked + .lever_word::after
              content ""
              position absolute
              top 2.2vh
              left 3.5vh
              width 4.8vh
              height 2.3vh
              border-left 0.8vh solid #ffbf7f
              border-bottom 1vh solid #ffbf7f
              -webkit-transform rotate(-45deg)
              -ms-transform rotate(-45deg)
              transform rotate(-45deg)
          .lever_word
            flex 1
            position relative
            padding-left 100px
            box-sizing border-box
            &::before
              content ""
              display block
              position absolute
              top 21.5px
              left 21.5px
              min-width 54.5px
              width 5vh
              min-height 54.5px
              height 5vh
              border 6px solid #ffbf7f
              border-radius 4px
        /*
        .overlay_border
          position absolute
          z-index 999
          width calc(100% - 35%)
          height 10vh
          opacity 0
          box-shadow:0px 0px 0px 5px #fff inset,0px 0px 0px 8px #fff inset;
          transition .2s
          &:hover
            opacity 1
            box-shadow:0px 0px 0px 5px #fff inset,0px 0px 0px 8px #ffbf7f inset;
        */
  .fixed_conoha
    position fixed
    top 260px
    right 5%
    min-width 300px
    width 30%
    height auto
    &__img
      position absolute
      top 0
      right 0
      left 0
      margin auto
      width 100%
      height auto
  .checked_count
    position fixed
    z-index 100
    right 3vh
    bottom 3vh
    width 30vh
    min-width 320px
    min-height 320px
    border 10px solid #fff
    border-radius 50%
    text-align center
    background-color #ffbf7f
    color #fff
    animation fadeIn .2s ease
    middle-line(30vh)
    &:hover
      background-color main_color
      cursor pointer
    // 8問選択時のアニメーション
    &.animated
      //animation hurueru .5s infinite ease
    .num
      position absolute
      z-index 101
      top 170px
      right 0
      bottom 0
      left -10vh
      margin auto
      font-size 140px
      font-weight bold
      &::before
        content 'あと残り'
        position absolute
        top -9vh
        right 0
        bottom 0
        left 10vh
        z-index 101
        font-size 50px
        font-weight normal
      &::after
        content '問！'
        position absolute
        z-index 101
        font-size 60px
        font-weight bold
    .result_go
      display block
      position absolute
      top 132px
      right 0
      left 0
      text-align center
      font-size 56px
      font-weight bold
/*****-----------------------------------*****/
// 1000~
@media (max-width: 768px)
  .global_header
    &__nav
      display none
  .diagnosis_wrap
    min-width auto
    width 100%
    padding-top 150px
    &__item
      height auto
      .question
        &__query
          width 100%
          font-size 3.5vw
          .question_number
            font-size 5vw
        &__choice
          .individual_choice
            min-width auto
            width 100%
            height 80px
            line-height 80px
            font-size 5.5vw
            .checkbox
              display none
              &:checked + .lever_word::after
                content ""
                position absolute
                top 20px
                left 23px
                width 30px
                height 15px
                border-left 6px solid #ffbf7f
                border-bottom 8px solid #ffbf7f
                -webkit-transform rotate(-45deg)
                -ms-transform rotate(-45deg)
                transform rotate(-45deg)
            .lever_word
              flex 1
              position relative
              padding-left 60px
              box-sizing border-box
              &::before
                content ""
                display block
                position absolute
                top 20px
                left 15px
                min-width auto
                width 30px
                min-height auto
                height 30px
                border 5px solid #ffbf7f
                border-radius 4px
    .fixed_conoha
      display none
    .checked_count
      position fixed
      z-index 100
      right 0
      bottom 0
      width 100%
      min-width auto
      height 100px
      min-height auto
      border none
      border-radius 0%
      line-height 100px
      color #fff
      animation fadeIn .2s ease
      &:hover
        background-color main_color
        cursor pointer
      // 8問選択時のアニメーション
      &.animated
        animation hurueru .5s infinite ease
      .num
        position absolute
        z-index 101
        top 0
        right 0
        bottom 0
        left 0
        margin auto
        font-size 10vw
        font-weight bold
        &::before
          content 'あと残り'
          position absolute
          top 0
          right 0
          bottom 0
          left -25vw
          z-index 101
          font-size 4vw
          font-weight normal
        &::after
          content '問です！'
          position absolute
          right 29vw
          z-index 101
          font-size 4vw
          font-weight bold
      .result_go
        display block
        position absolute
        top 0
        right 0
        left 0
        text-align center
        font-size 10vw
        font-weight bold
