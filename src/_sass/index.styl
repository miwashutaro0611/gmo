  position relative
  overflow hidden
  width 100vw
  background url(../img/index/app_back.jpg) no-repeat center center
  background-size cover
  background-attachment fixed
  &::before
    content ""
    position absolute
    z-index 99
    left -1%
    top 0%
    width 200%
    height 15vw
    background-color main_color
    transform skewY(6deg)
  .title
    position relative
    background #021969
    overflow hidden
    width 100%
    height 25vw
    margin 8% 0
    padding 0 8%
    box-sizing border-box
    transform skewY(6deg)
    h2
      padding 10% 0 0
      font-size 3.4vw
      font-family toroman
      color #021969
      line-height 1.6
      letter-spacing 0.2em
      //影をつける
      contour2 #fff
  .text
    position relative
    width 100%
    color #000
    padding 0 15% 15%
    box-sizing border-box
    overflow hidden
    &__inner
      margin 5% 0 0
      padding 5%
      background rgba(#fff, 0.6)
      h3
        font-size 6vw
        font-family "851kktt"
        color #021969
        //影をつける
        contour2 #fff
      p
        padding 5% 0
        font-size 2.2vw
        line-height 1.8
        letter-spacing 0.2em
      h4
        font-size 4vw
        padding 3% 0
        color #fff
        letter-spacing 0.1em
        //影をつける
        contour #021969
      ul
        padding 3% 0 2%
        li
          width 22%
          margin 0 4% 4% 0
          .list_img
            img
              width 80%
              text-align center
          .list_text

          &:nth-child(4n)
            margin 0 0 4% 0
      .link
        a
          link_btn:#fff,#021969
          background-image url(../img/index/external.png)
          background-repeat no-repeat
          background-position 96% center
          background-size 10% auto

/*****----------------------------------- constitution *****/
#constitution
  .title
    position relative
    background #021969
    overflow hidden
    width 100%
    height 25vw
    margin -6% 0 8%
    padding 0 8%
    box-sizing border-box
    transform skewY(-6deg)
    h2
      padding 10% 0 0
      font-size 3.4vw
      font-family toroman
      color #021969
      line-height 1.6
      letter-spacing 0.2em
      //影をつける
      contour2 #fff
  .text
    position relative
    width 100%
    overflow-x hidden
    &__inner
      .scroll
        position absolute
        left 0
        bottom 0
        &.wid3000
          z-index 1
          width 3000px
        &.wid4000
          z-index 500
          width:4000px
        &.wid7000
          z-index 1000
          width 7000px
/*****----------------------------------- diagnosis *****/
#diagnosis
  background: url(../img/index/konoha.png) no-repeat 90% 75%
  background-size: auto 65%
  width:100%
  height 300px
  margin 0 auto 150px
  padding 15% 0 5%
  position relative
  overflow hidden
  .start
    max-width 1000px
    width 90%
    margin 0 auto
    a
      display: block
      width 60%
      font-size 4em
      color #000
      border 2px solid #000
      padding 3%
      text-align center
      box-sizing border-box
      span
        &.large
          color #FFA200
          font-size 7em

  .diagnosis_wrap1
    double_line #fff,0%,#2576c2
  .diagnosis_wrap2
    double_line #fff,65%,#2576c2

